{{ form_start(form) }}
    
    {{ form_row(form.title) }}

    <div class="row">
        <div class="col-4">{{ form_row(form.price) }}</div>
        <div class="col-4">{{ form_row(form.rooms) }}</div>
        <div class="col-4">{{ form_row(form.beds) }}</div>
    </div>

    <div class="row">
        <div class="col-6">{{ form_row(form.availability_start) }}</div>
        <div class="col-6">{{ form_row(form.availability_end) }}</div>
    </div>
    
    <div class="row">
        <div class="col-4">{{ form_row(form.city) }}</div>
        <div class="col-4">{{ form_row(form.region) }}</div>
        <div class="col-4">{{ form_row(form.country) }}</div>
    </div>

    {{ form_row(form.category) }}
    
    {{ form_row(form.description) }}

    {{ form_row(form.is_published) }}

    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    
{{ form_end(form) }}
